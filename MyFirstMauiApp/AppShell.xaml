<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyFirstMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyFirstMauiApp"
    Shell.FlyoutBehavior="Flyout">
    <TabBar>
        <Tab>
            <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Icon="dotnet_bot.png"
        Route="MainPage" />
            <ShellContent
        Title="Layout Example"
        ContentTemplate="{DataTemplate local:LayoutExample}"
        Route="LayoutExample" />
            <ShellContent
        Title="New Page 1"
        ContentTemplate="{DataTemplate local:NewPage1}"
        Route="MainPage" />
            <ShellContent
        Title="Test Page"
        ContentTemplate="{DataTemplate local:TestPage}"
        Route="TestPage" />
        </Tab>
    </TabBar>
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Icon="dotnet_bot.png"
        Route="MainPage" />
    <ShellContent
        Title="Layout Example"
        ContentTemplate="{DataTemplate local:LayoutExample}"
        Route="LayoutExample" />
    <ShellContent
        Title="New Page 1"
        ContentTemplate="{DataTemplate local:NewPage1}"
        Route="MainPage" />
    <ShellContent
        Title="Test Page"
        ContentTemplate="{DataTemplate local:TestPage}"
        Route="TestPage" />
</Shell>
